<Page x:Class="BabkinsDashBoard.Views.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BabkinsDashBoard.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="UserBoardsBttn" Grid.Row="0" Width="200" Height="50" Click="UserBoardsBttn_Click" Content="Ваши доски"/>
            <Button x:Name="AllBoardsBttn" Grid.Row="0" Width="200" Height="50" Click="AllBoardsBttn_Click" Content="Доски других пользователей"/>
            <Button x:Name="PluginsBttn" Grid.Row="0" Width="200" Height="50" Click="PluginsBttn_Click"  Content="Плагины"/>
        </StackPanel>
        <Frame x:Name="StartPageFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
